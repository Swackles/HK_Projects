extends layout

block stylesheet
    link(rel='stylesheet', href='/stylesheets/project.css')

block content
    div(class="flexcontainer")
        case data.length
            when 0
                h1 No projects found
            default
                each item in data
                    a(href=`/${item.Path}`)            
                        div(class="flexdata projectContainer")
                            img(class="projectImage" src=`${item.Image}`)
                            h1= item.Name
                            p= item.Description