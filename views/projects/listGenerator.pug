extends layout

block meta
    meta(name="Name" content="Random list generator")
    meta(name="Description" content="Generates a random list of people and their result to a test")

block stylesheet
    link(rel='stylesheet', href='/stylesheets/project/genList/style.css')

block script
    script(src="/script/project/genList/script.js")

block content
    input#studentCount(type="number")
    button(onclick="getGrades()") test
    table#statisticTable
        tr
            th
            th Value
        tr
            td Passed
            td
        tr
            td A
            td
        tr
            td B
            td
        tr
            td C
            td
        tr
            td D
            td
        tr
            td E
            td
    meter#gradeMeter(class="gradeMeter" max="100" value="0" min="0")
    table#dataTable
        tr
            th(class="flex") Name
                button(class="sorting") ▴
                button(class="sorting") ▾
            th Age
                button(onclick="sortAge('up')" class="sorting") ▴
                button(onclick="sortAge('down')" class="sorting") ▾
            th Grade
                button(class="sorting") ▴
                button(class="sorting") ▾
            th Score
                button(class="sorting") ▴
                button(class="sorting") ▾